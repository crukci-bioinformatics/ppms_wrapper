<% content_for :header_tags do %>
<%= stylesheet_link_tag 'ppms.css', :plugin => 'ppms', :media => 'all' %>
<% end %>

<h3><%= l(:ppms_audit_title) %></h3>

<hr>
<h4><%= l(:ppms_audit_missing_code) %>: <%= @iss_code_missing.size %> <%= l(:ppms_audit_issues) %>.</h4>
<p><table>
  <thead><tr><th><%= l(:ppms_audit_label_issue) %></th>
             <th><%= l(:ppms_audit_label_project) %></th>
             <th><%= l(:ppms_audit_label_code) %></th>
             <th><%= l(:ppms_audit_label_description) %></th></tr></thead>
  <tbody>
  <% @iss_code_missing.each do |iss| %>
    <tr><td><a href="<%= issue_url(iss) %>"><%= iss.id %></a></td>
        <td><a href="<%= project_url(iss.project) %>"><%= iss.project.name %></a></td>
        <td>missing</td>
        <td><%= iss.subject %></td>
    </tr>
  <% end %>
  </tbody>
</table>
